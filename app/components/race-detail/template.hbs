{{#if empty}}
  <h3 class="race-title--empty">
    No {{party-name party 'adj'}} Candidates Available
  </h3>
{{else}}
  <h3 class="race-title">{{title}}</h3>

  <p class="race-summary">
    {{get race.nutshell (party-name party 'lowercaseF')}}
  </p>

  <div class="race-candidates">
  {{#each candidates as |candidate|}}
    <div class="race-candidate__item">
      {{candidate-info candidate=candidate}}
    </div>
  {{/each}}
  </div>
{{/if}}
